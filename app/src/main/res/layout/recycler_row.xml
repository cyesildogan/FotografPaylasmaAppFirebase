<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="3"
    >

    <TextView
        android:id="@+id/recycler_row_kullanicimail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="kullanici mail"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="137dp" />

    <ImageView
        android:id="@+id/recycler_row_gorsel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_weight="2"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ic_launcher_background"></ImageView>

    <TextView
        android:id="@+id/recycler_row_kullaniciyorum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="kullanici yorumu"
        ></TextView>
</LinearLayout>